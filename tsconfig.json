{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "config": ["config/index"],
      "ducks": ["src/ducks/index"],
      "ducks/*": ["src/ducks/*"],
      "fonts/*": ["src/static/fonts/*"],
      "modules": ["src/components/modules/index"],
      "modules/*": ["src/components/modules/*"],
      "common": ["src/components/common/index"],
      "common/*": ["src/components/common/*"],
      "images/*": ["src/static/images/*"],
      "router": ["server/router"],
      "styles/*": ["src/styles/*"],
      "styles": ["src/styles/index"],
      "services": ["src/services/index"],
      "services/*": ["src/services/*"],
      "store": ["src/store"],
      "styled-components": ["src/services/styled-components"],
      "types": ["src/types/index"],
      "vectors/*": ["src/static/vectors/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2015", "es2016"]
  }
}
